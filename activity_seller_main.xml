<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    app:cardBackgroundColor="@color/back"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="9dp"
    android:layout_height="wrap_content"
    tools:context=".Seller.SellerMainActivity"
    tools:ignore="HardcodedText">
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="60dp"
        android:background="@color/black"
        android:layout_gravity="center"
        android:id="@+id/shapeimage"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circle"
        android:src="@drawable/common_google_signin_btn_icon_light"
        android:layout_height="60dp"/>
        <TextView
            android:text="Details"
            android:textSize="16sp"
            android:id="@+id/details"
            android:fontFamily="@font/quicksandsemibold5"
            android:paddingStart="9sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>