<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/newfont"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants"
    android:divider="@drawable/add"
    android:drawingCacheQuality="high"
    android:duplicateParentState="true"
    android:layerType="software"
    android:orientation="vertical"
    android:padding="10dp"
    android:rotation="0"
    android:rotationX="0"
    android:rotationY="0"
    android:translationX="0dp"
    tools:context=".Admin.AddSeller"
    tools:ignore="HardcodedText">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:clickable="true"
  android:foreground="?android:attr/selectableItemBackground"
app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/back"
        tools:ignore="KeyboardInaccessibleWidget">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:src="@drawable/add" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.textfield.TextInputLayout

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxStrokeColor="#6CC132"
        app:boxStrokeErrorColor="#FD8D8D"
        app:hintTextColor="#6CC132"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@null"
            android:id="@+id/name"
            android:backgroundTintMode="@null"
            android:foregroundTint="@null"
            android:foregroundTintMode="add"
            android:hapticFeedbackEnabled="false"
            android:hint="Name"
            android:textColorHighlight="#6CC132" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:boxStrokeColor="#6CC132"
        app:chainUseRtl="true"
        app:hintTextColor="#6CC132"
        app:layout_constraintStart_toStartOf="parent"
        app:prefixTextColor="#A61B1F"
        app:suffixText="@string/email"
        app:suffixTextColor="#6CC132"
        tools:layout_editor_absoluteY="118dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:id="@+id/email"
            android:textColorHighlight="#6CC132" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxStrokeColor="#6CC132"
        app:hintTextColor="#6CC132"
        app:passwordToggleEnabled="false"
        app:passwordToggleTint="#6CC132"
        app:passwordToggleTintMode="src_atop">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:password="true"
            android:id="@+id/password"
            android:textColor="#757575"
            android:textColorHighlight="#6CC132"
            tools:ignore="TextContrastCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:boxStrokeColor="#6CC132"
        app:hintTextColor="#6CC132"
        app:passwordToggleEnabled="false"
        app:passwordToggleTintMode="multiply">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:digits="0123456789+ "
android:id="@+id/mobilenumber"
            android:hint="Mobile number"
            android:inputType="textPassword|phone"
            android:maxLength="10"
            android:password="false"
            android:textColorHighlight="#6CC132" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnadd"
        android:background="@drawable/curve"
        android:backgroundTint="@color/back"
        android:backgroundTintMode="add"
        android:text="Create" />

</LinearLayout>